{
  "name": "dragon_game",
  "version": "1.0.0",
  "description": "Slay dragons - get loot",
  "scripts": {
    "test": "jest --verbose",
    "tslint": "npx tslint --project '.'",
    "prettier": "npx prettier -l \"src/**\" \"test/**\"",
    "lint": "npm run tslint && npm run prettier",
    "sass": "npx sass src/styles/master.scss dist/styles.css",
    "pack": "npx webpack",
    "watch": "npx webpack --watch",
    "build": "npm run lint && npm run sass && npm run pack && npm run test",
    "quick": "npm run sass && npm run pack",
    "cleanBuild": "rm -rf ./dist && npm run build",
    "start": "npx http-server -c-1"
  },
  "author": "Daniel Saper",
  "private": true,
  "license": "ISC",
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^8.0.8",
    "@types/jest": "^24.0.17",
    "@types/react": "^16.8.24",
    "@types/react-dom": "^16.8.5",
    "awesome-typescript-loader": "^5.2.1",
    "http-server": "^0.11.1",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "sass": "^1.22.9",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6"
  }
}
