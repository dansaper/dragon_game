{
  "name": "dragon_game",
  "version": "1.0.0",
  "description": "Slay dragons - get loot",
  "scripts": {
    "test": "jest --verbose",
    "tslint": "./node_modules/.bin/tslint --project '.'",
    "prettier": "./node_modules/.bin/prettier -l \"src/**\" \"test/**\"",
    "lint": "npm run tslint && npm run prettier",
    "sass": "./node_modules/.bin/sass src/styles/master.scss dist/styles.css",
    "pack": "./node_modules/.bin/webpack",
    "build": "npm run lint && npm run sass && npm run pack && npm run test",
    "quick": "npm run sass && npm run pack",
    "cleanBuild": "rm -rf ./dist && npm run build",
    "startServer": "./node_modules/.bin/http-server -c-1"
  },
  "author": "Daniel Saper",
  "private": true,
  "license": "ISC",
  "dependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.11",
    "awesome-typescript-loader": "^5.2.1",
    "http-server": "^0.11.1",
    "jest": "^23.6.0",
    "jest-dom": "^2.1.1",
    "prettier": "^1.15.3",
    "react-testing-library": "^5.3.1",
    "sass": "^1.15.2",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*",
      "!**/TestUtilities.tsx"
    ],
    "setupTestFrameworkScriptFile": "./setupTests.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
